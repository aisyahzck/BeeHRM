 <div class="form-group" style="text-align:right">
	<button type="button" class="btn btn-danger" onclick="sendAjax2('selectLeaveEntitlement','div_leave','employeeId=$!employee.id')"><span><i class="fa fa-pencil" aria-hidden="true"></i></span> Change Leave Entitlement </button>
</div>	

#if ( !$employee.leaveEntitlement )
	<div class="form-group">
		Leave entitlement not defined.  Please define.
	</div>

#else
	
    <table class="table">
    	<tr><td class="line_title">Category</td><td class="line_sep">:</td><td class="line_data">$!employee.leaveEntitlement.code</td></tr>
       	<tr>
			<td class="line_title">Leaves Entitled</td><td class="line_sep">:</td><td class="line_data">

				<table class="table">
					<thead>
				    <tr>
            			<th style="width:10px"></th>
            			<th>Name</th>
            			<th>Paid?</th>
            			<th style="text-align:center">Total days</th>	
						<th style="text-align:center">Total taken</th>
						<th style="text-align:center">Available</th>
            		</tr>
                    </thead>
					<tbody>
                	#foreach ( $item in $employee.leaveEntitlement.items )
                		<tr>
                			<td>$velocityCount.</td>
                			<td>$!item.leave.name</td>
                			<td>#if ( $!item.leave.paid ) Paid #else Unpaid #end</td>
                			<td style="text-align:center">$!item.numberOfDays</td>	
							<td style="text-align:center">0</td>
							<td style="text-align:center">$!item.numberOfDays</td>
                		</tr>
                	#end
                    </tbody>
                </table>
				
				
			</td>
		</tr>
 </table>
 

	
#end


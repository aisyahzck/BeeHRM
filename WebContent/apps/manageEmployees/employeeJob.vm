

<div class="form-group">
	<label>Select Job</label>
	<select  name="jobId" class="form-control">
		<option value=""></option> 
		#foreach( $job in $jobs )
            <option value="$job.id">$job.code - $job.name</option>
		#end
	</select>
</div>

<div class="form-group">
	<label>Select Company</label>
	<select  name="companyId" class="form-control" onchange="sendAjax2('selectDepartments','select_departments','')">
		<option value=""></option> 
		#foreach( $company in $companies )
            <option value="$company.id">$company.name</option>
		#end
	</select>
</div>

<div class="form-group">
	<label>Select Department</label>
	<div id="select_departments"></div>
</div>

<div class="form-group" style="text-align:right">
	<button type="button" class="btn btn-link" onclick="sendAjax2('editEmployee','div_main','employeeId=$!employee.id')"><span><i class="fa fa-pencil-times" aria-hidden="true"></i></span> Cancel</button>	
	#if ( $job )
		<button type="button" class="btn btn-primary" onclick="saveData2('updateEmployeeJob','div_main','jobId=$!job.id')"><span><i class="fa fa-floppy-o" aria-hidden="true"></i></span> Update </button>		
	#else
		<button type="button" class="btn btn-primary" onclick="saveData2('saveNewJob','div_main','')"><span><i class="fa fa-floppy-o" aria-hidden="true"></i></span> Save </button>
	#end
</div>
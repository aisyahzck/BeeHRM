
<div class="form-group">
	<label>Office Name</label>
	<input  name="officeName" value="$!office.name" data-required="true" data-msg="Please enter Office Name" type="text" class="form-control">
</div>
	
<div class="form-group">
	<label>Principal?</label>
	<select name="isPrincipal" class="form-control">
		<option value=""></option>
		<option value="yes">Principal Office</option>
	</select>
</div>

<div class="form-group" style="text-align:right">
	<button type="button" class="btn btn-primary" onclick="saveData('saveNewOffice','div_office','companyId=$!company.id')"><span><i class="fa fa-floppy-o" aria-hidden="true"></i></span> Save </button>
	<button type="button" class="btn btn-link" onclick="sendAjax('getCompanyHQ','div_main','')"><span><i class="fa fa-pencil-times" aria-hidden="true"></i></span> Cancel</button>
</div>